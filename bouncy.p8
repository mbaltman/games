-- position of circle
pos = {x = 64, y = 64}
vel = {x = 0, y = 1}
col = 2
size = 2
maxvel = 10

function _update()

	-- update position
	pos.x += vel.x
	pos.y += vel.y

	-- boundary checking 
	if (pos.y > 127 or pos.y < 0) then 
		vel.y *= -1 
		vel.x += -1 + flr(rnd(3))
	 col = 3 + flr(rnd(10))	
 
	end
	
	if(pos.x > 127 or pos.x < 0) then 
	 vel.x *= -1 
	 vel.y += -1 + flr(rnd(3))
  col = 3 + flr(rnd(10))	
	end
	
	vel.x = max(-maxvel, vel.x)
	vel.x = min(maxvel, vel.x)
	
	vel.y = max(-maxvel, vel.y)
	vel.y = min(maxvel, vel.y)

end

function _draw()
  cls(1)
  circfill(pos.x,pos.y,size,col)
  print("vel"..vel.x..vel.y, 2, 2 , col)
  print("pos"..pos.x..pos.y, 2, 10 , col)
end
