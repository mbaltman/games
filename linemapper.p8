--line manager
history = {{x = 64, y=64}}
length = 1
current_index = {x = 64, y=64}
delay = 5

function update_line()
	delay -= 1 
	
	if delay == 0 then 
	
	 history[length] = {x = current_index.x, y = current_index.y}
	 length +=1
		delay = 5

		current_index.x += rndsgn()
		current_index.y += rndsgn() 
	end
end

function draw_line()
	for i=1,length - 1 do
		position = history[i]
		rect(position.x, position.y, position.x, position.y,7)		
	end
end
